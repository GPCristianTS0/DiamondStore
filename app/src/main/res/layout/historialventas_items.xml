<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemventas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

                <TextView
                    android:id="@+id/hv_fechaOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10/12/2025"
                    android:textSize="10sp"
                    android:textColor="#757575"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hv_idTe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hv_idT"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hv_idOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="#6RN"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hv_idTe" />

                <View
                    android:id="@+id/dividerHeader"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/hv_idOut"/>

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/hv_apodoClienteT"
                    android:textSize="10sp"
                    android:textColor="#9E9E9E"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dividerHeader" />

                <TextView
                    android:id="@+id/hv_apodoClienteOut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Nonis"
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView22" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hv_apodoClienteOut">

                        <TextView
                            android:id="@+id/hv_NoProductosTe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hv_NoProductosT"
                            android:textSize="10sp"
                            android:textColor="#9E9E9E"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/hv_NoProductosOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="10"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#616161" />
                </LinearLayout>


                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hv_montoT"
                    android:textSize="11sp"
                    android:textColor="#388E3C"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/hv_montoOut"
                    app:layout_constraintTop_toTopOf="@+id/hv_montoOut"/>

                <TextView
                    android:id="@+id/hv_montoOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="$ 2,500"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#388E3C"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hv_apodoClienteOut"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>