<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/lblTituloDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Detalle del Pago"
        android:textColor="#1976D2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTituloDetalle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/iconSuccess"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/bien_palomita"
                app:tint="#4CAF50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtStatusAbono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ABONO APLICADO"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iconSuccess" />

            <TextView
                android:id="@+id/CDA_txtMontoAbono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:text="$ 500.00"
                android:textColor="#212121"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtStatusAbono" />

            <TextView
                android:id="@+id/lblMonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto Recibido"
                android:textColor="#757575"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CDA_txtMontoAbono" />

            <View
                android:id="@+id/div1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="24dp"
                android:background="#EEEEEE"
                app:layout_constraintTop_toBottomOf="@+id/lblMonto" />

            <TextView
                android:id="@+id/lblFolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="Folio Ticket:"
                android:textColor="#1976D2"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div1" />

            <TextView
                android:id="@+id/CDA_txtFolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                tools:text="#A-1024"
                android:textColor="#424242"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/lblFolio" />

            <TextView
                android:id="@+id/lblFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Fecha y Hora:"
                android:textColor="#1976D2"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/lblFolio"
                app:layout_constraintTop_toBottomOf="@+id/lblFolio" />

            <TextView
                android:id="@+id/CDA_txtFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10 Dic 2025 - 04:30 PM"
                android:textColor="#424242"
                app:layout_constraintEnd_toEndOf="@+id/CDA_txtFolio"
                app:layout_constraintTop_toTopOf="@+id/lblFecha" />

            <TextView
                android:id="@+id/lblMetodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="MÃ©todo de Pago:"
                android:textColor="#1976D2"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/lblFecha"
                app:layout_constraintTop_toBottomOf="@+id/lblFecha" />

            <TextView
                android:id="@+id/CDA_txtMetodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="TRANSFERENCIA"
                android:textColor="#424242"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/CDA_txtFecha"
                app:layout_constraintTop_toTopOf="@+id/lblMetodo" />

            <LinearLayout
                android:id="@+id/layoutSaldos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:background="#E3F2FD"
                android:orientation="vertical"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/lblMetodo">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Deuda Anterior:"
                        android:textColor="#546E7A"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/CDA_txtSaldoAnterior"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#546E7A"
                        android:textSize="12sp"
                        tools:text="$ 2,000.00" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="6dp"
                    android:background="#BBDEFB"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nuevo Saldo Restante:"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"/>
                    <TextView
                        android:id="@+id/CDA_txtSaldoRestante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="$ 1,500.00"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#D32F2F"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/layoutSaldos">

                <Button
                    android:id="@+id/CDA_btnCancelarAbono"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Eliminar"
                    android:textColor="#D32F2F"
                    app:strokeColor="#D32F2F"
                    app:icon="@android:drawable/ic_menu_delete"
                    app:iconTint="#D32F2F"/>

                <Button
                    android:id="@+id/CDA_btnCompartirAbono"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Compartir"
                    android:backgroundTint="#1976D2"
                    android:textColor="#FFFFFF"
                    app:icon="@android:drawable/ic_menu_share" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>