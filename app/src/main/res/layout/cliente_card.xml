<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#E0E0E0">

    <androidx.cardview.widget.CardView
        android:id="@+id/CRED_cardMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/CRED_header"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#000000"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:letterSpacing="0.2"
                android:text="CLIENTE"
                android:textColor="#FFC107"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/CRED_qrContainer"
                app:layout_constraintStart_toStartOf="@+id/CRED_qrContainer"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/CRED_txtEmpresa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="MI TIENDA POS"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:alpha="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/CRED_qrContainer"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/CRED_txtNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/CRED_txtEmpresa"
                app:layout_constraintEnd_toStartOf="@+id/CRED_qrContainer"
                app:layout_constraintTop_toBottomOf="@+id/CRED_txtEmpresa"
                tools:text="Juan\nPérez" />

            <TextView
                android:id="@+id/CRED_txtID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ID: 61823459595"
                android:textColor="#FFC107"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                app:layout_constraintTop_toBottomOf="@+id/CRED_txtNombre"
                app:layout_constraintStart_toStartOf="@+id/CRED_txtNombre" />

            <androidx.cardview.widget.CardView
                android:id="@+id/CRED_qrContainer"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_border"
                    android:backgroundTint="#FFF8E1"/>

                <ImageView
                    android:id="@+id/CRED_imgQR"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    android:src="@drawable/qr_prueba"/>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Presenta este código QR en caja para acumular puntos o realizar abonos."
                android:textSize="10sp"
                android:textColor="#757575"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/CRED_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/CRED_qrContainer"
                app:layout_constraintBottom_toTopOf="@+id/footerLayout"/>

            <LinearLayout
                android:id="@+id/footerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp"
                android:paddingVertical="8dp"
                android:background="#F5F5F5"
                app:layout_constraintTop_toBottomOf="@+id/CRED_qrContainer"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@android:drawable/star_on"
                    app:tint="#212121"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verified by Diamond System"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:textAllCaps="true"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>