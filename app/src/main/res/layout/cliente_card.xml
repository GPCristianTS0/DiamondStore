<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#F5F5F5">

    <androidx.cardview.widget.CardView
        android:id="@+id/CRED_cardMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <View
                android:id="@+id/CRED_header"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#1976D2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/CRED_txtEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MI TIENDA POS"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                app:layout_constraintBottom_toBottomOf="@+id/CRED_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/CRED_header" />

            <TextView
                android:id="@+id/CRED_txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:layout_marginTop="15dp"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CRED_header"
                tools:text="Juan Pérez López" />

            <TextView
                android:id="@+id/CRED_txtID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 61823459595"
                android:textColor="#757575"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:layout_constraintTop_toBottomOf="@+id/CRED_txtNombre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/CRED_qrContainer"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeColor="#EEEEEE"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@+id/CRED_txtID"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/CRED_imgQR"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    android:src="@drawable/qr_prueba"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Escanea para comprar o abonar"
                android:textAllCaps="true"
                android:textSize="10sp"
                android:textColor="#BDBDBD"
                app:layout_constraintTop_toBottomOf="@+id/CRED_qrContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_border"
                android:backgroundTint="#F1F8E9"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                app:layout_constraintTop_toBottomOf="@+id/CRED_qrContainer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@android:drawable/star_on"
                    app:tint="#4CAF50"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verified by Diamond System"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#388E3C"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>