<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/redondear_esquinas"
    android:backgroundTint="#FFFFFF"
    android:padding="24dp">

    <TextView
        android:id="@+id/DA_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realizar Abono"
        android:textColor="#1565C0"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/DA_containerBuscador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DA_titulo">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Buscar por Teléfono o Nombre"
            app:boxStrokeColor="#1565C0"
            app:endIconMode="clear_text"
            app:hintTextColor="#1565C0"
            app:startIconDrawable="@android:drawable/ic_menu_search">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/DA_txtBusqueda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/DA_btnBuscar"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#1565C0"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_search"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/DA_lblError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cliente no encontrado"
        android:textColor="#D32F2F"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DA_containerBuscador" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DA_containerBuscador">

        <LinearLayout
            android:id="@+id/DA_layoutResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_border"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/DA_lblError"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/iconAvatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/redondear_esquinas"
                    android:backgroundTint="#1565C0"
                    android:gravity="center"
                    android:text="C"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/DA_lblNombreCliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juan Pérez"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/DA_lblTelefonoCliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="618 123 4567"
                        android:textColor="#757575"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/DA_txtDeudaTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 500.00"
                    android:textColor="#D32F2F"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#E0E0E0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Notas Pendientes:"
                android:textColor="#757575"
                android:textSize="12sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/DA_recyclerVentas"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#FAFAFA"
                android:padding="4dp"
                android:scrollbars="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Método de Pago:"
                android:textColor="#757575"
                android:textSize="12sp" />

            <RadioGroup
                android:id="@+id/DA_radioGroupMetodo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/DA_rbEfectivo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Efectivo"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:buttonTint="#1565C0" />

                <RadioButton
                    android:id="@+id/DA_rbTarjeta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tarjeta"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:buttonTint="#1565C0" />

                <RadioButton
                    android:id="@+id/DA_rbTransf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transf."
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:buttonTint="#1565C0" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/DA_inputLayoutMonto"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Cantidad a Abonar ($)"
                app:boxStrokeColor="#4CAF50"
                app:hintTextColor="#4CAF50">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/DA_txtMontoAbono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quedaría debiendo: "
                    android:textColor="#2E7D32" />

                <TextView
                    android:id="@+id/DA_txtNuevoSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 0.00"
                    android:textColor="#2E7D32"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/DA_layoutExito"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/DA_containerBotones"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DA_lblError"
            tools:visibility="gone">

            <ImageView
                android:id="@+id/DA_imgExito"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bien_palomita"
                app:tint="#4CAF50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="¡Abono Registrado!"
                android:textColor="#4CAF50"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="El saldo ha sido actualizado."
                android:textColor="#757575"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/DA_containerBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="24dp">

        <Button
            android:id="@+id/DA_btnCancelar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/DA_btnTicket"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:backgroundTint="#212121"
            android:text="Ticket"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_share"
            app:iconGravity="textStart" />

        <Button
            android:id="@+id/DA_btnConfirmarAbono"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:text="Abonar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/DA_btnListo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:text="¡Listo!"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            tools:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>