<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddClient">


    <TextView
        android:id="@+id/telefono_label"
        android:layout_width="107dp"
        android:layout_height="35dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="52dp"
        android:text="Telefono:"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/telefono_txField"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/direccion_label" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/telefono_txField"
        android:layout_width="190dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/direccion_txField" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/direccion_txField"
        android:layout_width="195dp"
        android:layout_height="66dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apodo_txField" />

    <TextView
        android:id="@+id/direccion_label"
        android:layout_width="123dp"
        android:layout_height="38dp"
        android:layout_marginTop="44dp"
        android:text="Direccion:"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/direccion_txField"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Apodo" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/apodo_txField"
        android:layout_width="190dp"
        android:layout_height="43dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/name_txField"
        app:layout_constraintTop_toTopOf="@+id/Apodo" />

    <TextView
        android:id="@+id/Apodo"
        android:layout_width="107dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:text="Apodo:"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/name_txField"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="@+id/name_label"
        app:layout_constraintTop_toBottomOf="@+id/name_label" />

    <TextView
        android:id="@+id/titulo_label"
        android:layout_width="177dp"
        android:layout_height="33dp"
        android:layout_marginTop="64dp"
        android:text="AÃ±adir Cliente"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/name_label"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotipo_diamondsystems" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/name_txField"
        android:layout_width="190dp"
        android:layout_height="43dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="24dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_label" />

    <TextView
        android:id="@+id/name_label"
        android:layout_width="107dp"
        android:layout_height="35dp"
        android:layout_marginTop="104dp"
        android:text="Nombre:"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/name_txField"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/ingresar_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefono_txField"
        app:layout_constraintVertical_bias="0.189" />

</androidx.constraintlayout.widget.ConstraintLayout>