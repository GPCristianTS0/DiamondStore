<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagenFP"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/agregar_imgaen"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tittlelbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/tittleFP"
            android:textColor="#0D47A1"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imagenFP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagenFP"
            app:layout_constraintTop_toTopOf="@+id/imagenFP" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FP_layoutNombre"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="@string/nombreFP"
            app:boxStrokeColor="#0D47A1"
            app:hintTextColor="#0D47A1"
            android:textColorHint="#1565C0"
            app:layout_constraintTop_toBottomOf="@+id/imagenFP">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nombertxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FP_layoutMarca"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/marcaFP"
            app:boxStrokeColor="#0D47A1"
            app:hintTextColor="#0D47A1"
            android:textColorHint="#1565C0"
            app:layout_constraintEnd_toStartOf="@+id/FP_containerSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FP_layoutNombre">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/marcatxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/FP_containerSpinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_border"
            android:backgroundTint="#F0F0F0"
            android:orientation="vertical"
            android:padding="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/FP_layoutMarca"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/FP_layoutMarca"
            app:layout_constraintTop_toTopOf="@+id/FP_layoutMarca">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                android:text="@string/modeloFP"
                android:textColor="#0D47A1"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinnerSeccionFP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FP_layoutDesc"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/descripcionFP"
            app:boxStrokeColor="#0D47A1"
            android:textColorHint="#1565C0"
            app:hintTextColor="#0D47A1"
            app:layout_constraintTop_toBottomOf="@+id/FP_layoutMarca">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/descripciontxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FP_layoutPrecioPub"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/p_publicoFP"
            app:boxStrokeColor="#0D47A1"
            android:textColorHint="#1565C0"
            app:hintTextColor="#0D47A1"
            app:layout_constraintEnd_toStartOf="@+id/FP_layoutPrecioNeto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FP_layoutDesc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/p_publicotxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FP_layoutPrecioNeto"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:hint="@string/p_netoFP"
            app:boxStrokeColor="#0D47A1"
            app:hintTextColor="#0D47A1"
            android:textColorHint="#1565C0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/FP_layoutPrecioPub"
            app:layout_constraintTop_toBottomOf="@+id/FP_layoutDesc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/p_netotxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FP_layoutCodeBar"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/codigoBarrasFPlabel"
            app:boxStrokeColor="#0D47A1"
            app:hintTextColor="#0D47A1"
            android:textColorHint="#1565C0"
            app:layout_constraintEnd_toStartOf="@+id/escanearButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FP_layoutPrecioPub">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/codeBartxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/escanearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0D47A1"
            android:text="Escanear"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/FP_layoutCodeBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/FP_layoutCodeBar" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FP_layoutUnidades"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/unidadestxtFP"
            app:boxStrokeColor="#0D47A1"
            app:hintTextColor="#0D47A1"
            android:textColorHint="#1565C0"
            app:layout_constraintEnd_toStartOf="@+id/FP_layoutVendidos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FP_layoutCodeBar">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/unidadestxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FP_layoutVendidos"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:hint="@string/vendidosFP"
            app:boxStrokeColor="#0D47A1"
            app:hintTextColor="#0D47A1"
            android:textColorHint="#1565C0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/FP_layoutUnidades"
            app:layout_constraintTop_toBottomOf="@+id/FP_layoutCodeBar">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vendidosInputFP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/agregarBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#0D47A1"
            android:text="Agregar Producto"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@+id/addProductoBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FP_layoutUnidades" />

        <Button
            android:id="@+id/addProductoBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#D32F2F"
            android:text="Eliminar"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/agregarBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/agregarBtn"
            app:layout_constraintTop_toTopOf="@+id/agregarBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>