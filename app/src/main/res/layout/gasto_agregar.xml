<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTituloForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Salida"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#212121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etMontoGasto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="$0.00"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#D32F2F"
        android:textColorHint="#FFCDD2"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTituloForm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese el monto"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        app:layout_constraintTop_toBottomOf="@id/etMontoGasto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutConcepto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Concepto / Descripción"
        app:boxBackgroundColor="#F5F5F5"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxStrokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/etMontoGasto">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDescripcionGasto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:background="@drawable/button_border"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/labelProv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proveedor"
        android:textStyle="bold"
        android:textColor="#616161"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutConcepto"/>

    <Spinner
        android:id="@+id/spProveedoresGasto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelProv"/>
    <TextView
        android:id="@+id/labelMetodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Método de Pago"
        android:textStyle="bold"
        android:textColor="#616161"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spProveedoresGasto"/>

    <RadioGroup
        android:id="@+id/rgMetodoPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelMetodo">

        <RadioButton
            android:id="@+id/rbEfectivo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Efectivo"
            android:checked="true"
            android:buttonTint="#D32F2F"/>

        <RadioButton
            android:id="@+id/rbTransferencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Transferencia"
            android:buttonTint="#2196F3"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnGuardarGasto"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:text="Registrar Gasto"
        android:backgroundTint="#342FD3"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/rgMetodoPago"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>