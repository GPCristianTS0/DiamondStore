<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="24dp">

    <View
        android:id="@+id/dragHandle"
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:background="#E0E0E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Detalle del Corte"
        android:textColor="#1565C0"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dragHandle" />

    <TextView
        android:id="@+id/DC_txtFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="12/10/2025 - 09:30 PM"
        android:textColor="#757575"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTitulo" />

    <LinearLayout
        android:id="@+id/layoutTabla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#E3F2FD"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/DC_txtFecha">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INGRESOS"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Monto Inicial (Base)"
                android:textColor="#455A64"/>
            <TextView
                android:id="@+id/DC_txtMontoInicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 0.00"
                android:textStyle="bold"
                android:textColor="#37474F"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ventas Efectivo"
                android:textColor="#455A64"/>
            <TextView
                android:id="@+id/DC_txtVentasEfectivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 0.00"
                android:textStyle="bold"
                android:textColor="#37474F"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ventas Tarjeta"
                android:textColor="#455A64"/>
            <TextView
                android:id="@+id/DC_txtVentasTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 0.00"
                android:textStyle="bold"
                android:textColor="#37474F"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Abonos Recibidos"
                android:textColor="#455A64"/>
            <TextView
                android:id="@+id/DC_txtAbonos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 0.00"
                android:textStyle="bold"
                android:textColor="#37474F"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#90CAF9"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SALIDAS"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#C62828"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gastos en Efectivo"
                android:textColor="#455A64"/>
            <TextView
                android:id="@+id/DC_txtGastosEfectivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- $ 0.00"
                android:textColor="#C62828"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gastos Transferencia"
                android:textColor="#455A64"/>
            <TextView
                android:id="@+id/DC_txtGastosTransf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- $ 0.00"
                android:textColor="#C62828"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#1565C0"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Esperado"
                android:textStyle="bold"
                android:textColor="#1565C0"/>
            <TextView
                android:id="@+id/DC_txtTotalCalculado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 0.00"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1565C0"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/lblReal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Reportado (Conteo FÃ­sico)"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTabla" />

    <TextView
        android:id="@+id/DC_txtTotalReal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 0.00"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblReal"
        app:layout_constraintBottom_toBottomOf="@+id/lblReal"/>

    <View
        android:id="@+id/sepFinal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toBottomOf="@+id/lblReal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diferencia Final"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/DC_txtDiferencia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/DC_txtDiferencia" />

    <TextView
        android:id="@+id/DC_txtDiferencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="$ 0.00"
        android:textColor="#388E3C"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sepFinal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/DC_btnCerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Cerrar Detalle"
        android:backgroundTint="#1565C0"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/DC_txtDiferencia" />

</androidx.constraintlayout.widget.ConstraintLayout>