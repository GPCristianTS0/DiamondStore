<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <View
            android:id="@+id/headerColor"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFEBEE"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/imgIconoDetalle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_menu_rotate"
            app:tint="#D32F2F"
            android:background="@color/black"
            android:padding="12dp"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/headerColor" />
        <TextView
            android:id="@+id/G_ticketMontoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-$500.00"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imgIconoDetalle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvLabelMonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto Total"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            app:layout_constraintTop_toBottomOf="@id/G_ticketMontoDetalle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/separadorTicket"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabelMonto" />

        <TextView
            android:id="@+id/lblFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fecha y Hora:"
            android:textStyle="bold"
            android:textColor="#616161"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separadorTicket" />

        <TextView
            android:id="@+id/G_ticketFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="14 Ene 2024, 10:30 AM"
            android:textColor="#000000"
            android:layout_marginEnd="24dp"
            app:layout_constraintWidth_percent="0.55"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/lblFecha" />

        <TextView
            android:id="@+id/lblMetodo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Método:"
            android:textStyle="bold"
            android:textColor="#616161"
            android:layout_marginTop="12dp"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintStart_toStartOf="@id/lblFecha"
            app:layout_constraintTop_toBottomOf="@id/G_ticketFecha" />

        <TextView
            android:id="@+id/G_ticketMetodo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Efectivo (Caja Chica)"
            android:textColor="#000000"
            app:layout_constraintWidth_percent="0.55"
            app:layout_constraintStart_toStartOf="@id/G_ticketFecha"
            app:layout_constraintTop_toTopOf="@id/lblMetodo" />

        <TextView
            android:id="@+id/lblProveedor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Proveedor:"
            android:textStyle="bold"
            android:textColor="#616161"
            android:layout_marginTop="12dp"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintStart_toStartOf="@id/lblFecha"
            app:layout_constraintTop_toBottomOf="@id/G_ticketMetodo" />

        <TextView
            android:id="@+id/G_ticketProveedor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Grupo Bimbo S.A."
            android:textColor="#000000"
            app:layout_constraintWidth_percent="0.55"
            app:layout_constraintStart_toStartOf="@id/G_ticketFecha"
            app:layout_constraintTop_toTopOf="@id/lblProveedor" />

        <TextView
            android:id="@+id/lblDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción / Notas:"
            android:textStyle="bold"
            android:textColor="#616161"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/G_ticketProveedor" />

        <TextView
            android:id="@+id/G_ticketDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pago de pedido semanal de pan blanco y medias noches."
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/lblDesc" />

        <Button
            android:id="@+id/G_ticketBtnEliminarGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar Movimiento"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D32F2F"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/G_ticketDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>