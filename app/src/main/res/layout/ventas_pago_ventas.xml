<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/PVI_cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/redondear_esquinas"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/PVI_totalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total a Pagar"
            android:textColor="#757575"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/PVI_totalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="$ 1,850.00"
            android:textColor="#1565C0"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PVI_totalLabel" />

        <ViewFlipper
            android:id="@+id/PVI_viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PVI_totalCount">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/PVI_metodoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleccione Método de Pago"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/PVI_filaBotones1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/PVI_btnEfectivo"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:text="Efectivo"
                        android:textColor="#1565C0"
                        app:icon="@android:drawable/ic_menu_rotate"
                        app:iconTint="#1565C0"
                        app:strokeColor="#1565C0" />

                    <Button
                        android:id="@+id/PVI_btnTarjeta"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:text="Tarjeta"
                        android:textColor="#1565C0"
                        app:icon="@android:drawable/ic_menu_agenda"
                        app:iconTint="#1565C0"
                        app:strokeColor="#1565C0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/PVI_filaBotones2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/PVI_btnTransfer"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:text="Transf."
                        android:textColor="#1565C0"
                        app:icon="@android:drawable/ic_menu_share"
                        app:iconTint="#1565C0"
                        app:strokeColor="#1565C0" />

                    <Button
                        android:id="@+id/PVI_btnCredito"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:text="Crédito"
                        android:textColor="#1565C0"
                        app:icon="@android:drawable/ic_menu_my_calendar"
                        app:iconTint="#1565C0"
                        app:strokeColor="#1565C0" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/PVI_layoutEfectivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/PVI_tituloMetodoSelect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cobro en Efectivo"
                        android:textColor="#1565C0"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/PVI_layoutPagaCon"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:hint="Paga con:"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/PVI_txtPagaCon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/PVI_containerCambio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/PVI_cambiolbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Su Cambio: "
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/PVI_cambioCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 0.00"
                        android:textColor="#388E3C"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/PVI_btnAceptar"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#1565C0"
                        android:text="Cobrar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:cornerRadius="8dp" />

                    <Button
                        android:id="@+id/PVI_btnRegresar"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FF0000"
                        android:text="Regresar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:cornerRadius="8dp"
                        app:iconGravity="textStart" />

                    <Button
                        android:id="@+id/PVI_btnCompartir"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#000000"
                        android:text="Ticket"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_share"
                        app:iconGravity="textStart" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/PVI_layoutTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="Datos de la Tarjeta"
                    android:textColor="#1565C0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/PVI_layoutBanco"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="Nombre del Banco"
                        app:boxStrokeColor="#1565C0"
                        app:hintTextColor="#1565C0">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/PVI_txtBanco"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:inputType="textCapWords"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/PVI_layoutDigitos"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:hint="Últimos 4"
                        app:boxStrokeColor="#1565C0"
                        app:hintTextColor="#1565C0">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/PVI_txtDigitos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/PVI_layoutAprobacion"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="No. Aprobación (7 dígitos)"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/PVI_txtAprobacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="7"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Tipo de Tarjeta"
                    android:textColor="#757575" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/PVI_chipGroupTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/PVI_chipDebito"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Débito"
                        app:chipBackgroundColor="@color/selector_chip_azul"
                        app:checkedIconTint="@color/white"
                        android:textColor="@color/white" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/PVI_chipCredito"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crédito"
                        app:chipBackgroundColor="@color/selector_chip_azul"
                        app:checkedIconTint="@color/white"
                        android:textColor="@color/white" />
                </com.google.android.material.chip.ChipGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/PVI_btnCobrarTarjeta"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#1565C0"
                        android:text="Cobrar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:cornerRadius="8dp" />

                    <Button
                        android:id="@+id/PVI_btnRegresarT"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FF0000"
                        android:text="Regresar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:cornerRadius="8dp" />

                    <Button
                        android:id="@+id/PVI_btnCompartirT"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#000000"
                        android:text="Ticket"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_share"
                        app:iconGravity="textStart" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/PVI_layoutTransfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="Datos para Transferencia"
                    android:textColor="#1565C0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/PVI_containerInfoTransfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beneficiario:"
                        android:textColor="#757575"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/PVI_txtNombreInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Cargando nombre..."
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Banco:"
                        android:textColor="#757575"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/PVI_txtBancoInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Cargando banco..."
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuenta / CLABE / Tarjeta:"
                        android:textColor="#757575"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/PVI_txtCuentaInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0000 0000 0000 0000"
                        android:textColor="#1565C0"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Muestre estos datos al cliente\ny espere el comprobante."
                    android:textColor="#757575"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/PVI_btnCobrarTransf"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#1565C0"
                        android:text="Cobrar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:cornerRadius="8dp" />

                    <Button
                        android:id="@+id/PVI_btnRegresarTransf"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FF0000"
                        android:text="Regresar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:cornerRadius="8dp" />

                    <Button
                        android:id="@+id/PVI_btnCompartirTrans"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#000000"
                        android:text="Ticket"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_share"
                        app:iconGravity="textStart" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/PVI_layoutCredito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="#F57C00"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmar Crédito"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#F57C00"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente asignado:"
                    android:textSize="12sp"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/PVI_txtNombreClienteCredito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Público General"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0"
                    android:hint="Días de plazo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/PVI_txtDiasCredito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="30"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frecuencia de Abonos:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:layout_marginTop="12dp"/>

                <RadioGroup
                    android:id="@+id/PVI_radioGroupFrecuencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="4"
                    android:layout_marginTop="4dp">

                    <RadioButton
                        android:id="@+id/PVI_rbPagoUnico"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Un Pago"
                        android:checked="true"
                        android:textSize="11sp"
                        android:buttonTint="#1565C0"
                        android:textColor="#000000"/>

                    <RadioButton
                        android:id="@+id/PVI_rbSemanal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Semanal"
                        android:textSize="11sp"
                        android:buttonTint="#1565C0"
                        android:textColor="#000000"/>

                    <RadioButton
                        android:id="@+id/PVI_rbQuincenal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quincenal"
                        android:textSize="11sp"
                        android:buttonTint="#1565C0"
                        android:textColor="#000000"/>

                    <RadioButton
                        android:id="@+id/PVI_rbMensual"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mensual"
                        android:textSize="11sp"
                        android:buttonTint="#1565C0"
                        android:textColor="#000000"/>
                </RadioGroup>

                <TextView
                    android:id="@+id/PVI_lblAbonoSugerido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Debe dar: $ 0.00 cada Semana"
                    android:background="#E3F2FD"
                    android:padding="6dp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:textColor="#455A64"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/PVI_btnCobrarCredito"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#F57C00"
                        android:text="Fiar / Crédito"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="8dp" />

                    <Button
                        android:id="@+id/PVI_btnRegresarCredito"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FF0000"
                        android:text="Regresar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:cornerRadius="8dp" />

                    <Button
