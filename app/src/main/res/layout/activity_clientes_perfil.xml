<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp">

        <View
            android:id="@+id/PC_headerBg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="-40dp"
            android:background="#1976D2"
            app:layout_constraintBottom_toBottomOf="@+id/PC_cardQRHeader"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/PC_lblTituloPantalla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Credencial Digital"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/PC_txtPuntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_border"
            android:backgroundTint="#FFFFFF"
            android:drawablePadding="4dp"
            android:drawableTint="#FF9800"
            android:gravity="center"
            android:elevation="4dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:textStyle="bold"
            app:drawableStartCompat="@android:drawable/btn_star_big_on"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="150 pts" />

        <androidx.cardview.widget.CardView
            android:id="@+id/PC_cardQRHeader"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="70dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/PC_imgQRPrincipal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/qr_prueba"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/PC_txtNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/PC_cardQRHeader"
            app:layout_constraintTop_toTopOf="@+id/PC_cardQRHeader"
            tools:text="Juan Pérez López" />

        <TextView
            android:id="@+id/PC_txtApodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E0E0E0"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/PC_txtNombre"
            app:layout_constraintTop_toBottomOf="@+id/PC_txtNombre"
            tools:text="&quot;El Güero&quot;" />

        <TextView
            android:id="@+id/PC_txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_border"
            android:backgroundTint="#4CAF50"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="ACTIVO"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/PC_txtApodo"
            app:layout_constraintTop_toBottomOf="@+id/PC_txtApodo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/PC_headerBg"
            app:layout_constraintEnd_toEndOf="@+id/PC_txtNombre"
            app:layout_constraintTop_toBottomOf="@+id/PC_txtApodo">

            <ImageView
                android:id="@+id/PC_btnShareWhats"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="#1976D2"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_share"
                app:tint="#25D366" />

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/PC_cardInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/PC_headerBg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/PC_lblInfoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Datos de Contacto"
                    android:textColor="#1976D2"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/PC_iconTel"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_call"
                        app:tint="#757575" />

                    <TextView
                        android:id="@+id/PC_txtTelefono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textColor="#424242"
                        android:textSize="16sp"
                        tools:text="618-123-4567" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/PC_iconDir"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_mapmode"
                        app:tint="#757575" />

                    <TextView
                        android:id="@+id/PC_txtDireccion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="#424242"
                        android:textSize="14sp"
                        tools:text="Calle Principal #123, Col. Centro, Durango, Dgo." />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/PC_cardFinanzas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/PC_cardInfo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/PC_lblFinanzasTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Estado de Cuenta"
                    android:textColor="#1976D2"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/PC_lblDeuda"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Saldo Pendiente:"
                        android:textColor="#424242"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/PC_txtDeuda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#D32F2F"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:text="$ 2,500.00" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/PC_cardStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@+id/PC_cardFinanzas">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. Compras"
                        android:textColor="#757575"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/PC_txtVentasTotales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1976D2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="15" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket Prom."
                        android:textColor="#757575"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/PC_txtTicketPromedio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#388E3C"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="$ 450" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Último Pago"
                        android:textColor="#757575"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/PC_txtFechaUltimoPago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF9800"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Hace 3d" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/PC_cardFavoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/PC_cardStats">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Lo Más Comprado (Top 3)"
                    android:textColor="#1976D2"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/PC_layoutMasComprados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/PC_imgProd1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:scaleType="centerCrop"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:src="@drawable/logotipo_diamondsystems"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/PC_txtProd1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Coca-Cola"
                            android:textColor="#424242"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/PC_cantProd1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x45"
                            android:textColor="#1976D2"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="50dp"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/PC_imgProd2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:scaleType="centerCrop"
                                    app:layout_constraintDimensionRatio="1:1"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:src="@drawable/logotipo_diamondsystems"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/PC_txtProd2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Sabritas"
                            android:textColor="#424242"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/PC_cantProd2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x22"
                            android:textColor="#1976D2"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="50dp"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/PC_imgProd3"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:scaleType="centerCrop"
                                    app:layout_constraintDimensionRatio="1:1"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:src="@drawable/logotipo_diamondsystems"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/PC_txtProd3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Leche"
                            android:textColor="#424242"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/PC_cantProd3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x12"
                            android:textColor="#1976D2"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/PC_layoutSinDatosProductos"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/pago_icon"
                        android:scaleType="centerCrop"
                        app:tint="#040101"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="Sin datos"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/PC_layoutBotones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/PC_cardFavoritos">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/PC_btnVerVentas"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9800"
                    android:text="Historial\nVentas"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_sort_by_size" />

                <Button
                    android:id="@+id/PC_btnVerAbonos"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1976D2"
                    android:text="Historial\nPagos"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_agenda" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/PC_btnEditarInfo"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="Editar Info"
                    android:textColor="#757575"
                    app:strokeColor="#BDBDBD" />

                <Button
                    android:id="@+id/PC_btnAbonarRapido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:text="+ Abonar"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>