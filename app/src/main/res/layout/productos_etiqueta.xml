<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EP_rootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:minWidth="300dp">

    <LinearLayout
        android:id="@+id/EP_headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:background="#2196F3">

        <ImageView
            android:id="@+id/EP_imgLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logotipo_diamondsystems"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/EP_txtEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIAMOND SYSTEMS"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:letterSpacing="0.05"/>

            <TextView
                android:id="@+id/EP_txtTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6182345959"
                android:textColor="#E3F2FD"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:background="@drawable/borde_corte_etiqueta">
        <TextView
            android:id="@+id/EP_txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Galletas de Avena"
            android:textColor="#0D47A1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="2"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/EP_imgQR"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:scaleType="fitXY"
            android:src="@drawable/qr_prueba"/>

        <TextView
            android:id="@+id/EP_txtCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:text="PROD-55210"
            android:textColor="#616161"
            android:textSize="11sp"
            android:fontFamily="monospace"/>

        <TextView
            android:id="@+id/EP_txtPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            tools:text="$ 45.00"
            android:textColor="#2196F3"
            android:textSize="38sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IVA INCLUIDO"
            android:textSize="8sp"
            android:textColor="#9E9E9E"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#1565C0"/>

</LinearLayout>